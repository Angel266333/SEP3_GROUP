create sequence menuitem_id_item_seq;

alter sequence menuitem_id_item_seq
  owner to postgres;

create table menuitem
(
  id_item     serial       not null
    constraint menuitem_pk
    primary key,
  description varchar(256) not null
);

alter table menuitem
  owner to postgres;

create unique index menuitem_id_item_uindex
  on menuitem (id_item);

create table ingredient
(
  name varchar(256) not null
    constraint ingredient_pk
    primary key
);

alter table ingredient
  owner to postgres;

create unique index ingredient_name_uindex
  on ingredient (name);

create table item_ingredient
(
  id_item integer      not null
    constraint item_ingredient_menuitem_id_item_fk
    references menuitem,
  name    varchar(256) not null
    constraint item_ingredient_ingredient_name_fk
    references ingredient
);

alter table item_ingredient
  owner to postgres;
